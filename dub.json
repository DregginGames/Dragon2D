			"importPaths": ["source/lib/"],
            "version": "0.3.0-alpha",
			"dependencies": {
				"gl3n": "~>1.2.0",
				"derelict-sdl2": "~>1.9.7",
				"derelict-gl3": "~>1.0.15"
			}
		}
	]
