{
	"name": "dragon2d",
	"description": "Dragon2D - A 2D RPG Engine written in D2",
	"authors": ["Malte Kießling"],
	"licence": "MIT",
    "version": "0.3.0-alpha",
	"targetType": "executable",
	"sourcePaths": ["source/game/"],
